    <sp_widget action="DELETE">
        <category>custom</category>
        <client_script><![CDATA[function() {				
	/* widget controller */			
	var c = this;			

	c.approval = function(idx) {			
		var id = c.data.flows[idx].sys_id;		
		console.log('System ID: ' + id);		
		c.data.flows[idx].flow_status = "承認済み";		
		c.server.get({		
			action: 'flowUpdated',	
			sysID: id	
		})		
	}			
}				
]]></client_script>
